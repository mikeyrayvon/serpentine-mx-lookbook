@import "sanitize"
@import "helpers"
 
// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-tiny = ($gutter/2)
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 16px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white = rgb(255,255,255)

$color-grey-light = rgb(140,140,140)
$color-grey-dark = rgb(40,40,40)
$color-grey-medium = rgb(90,90,90)

$sans = helvetica, arial
$serif = times, georgia

// TYPOGRAPHY

body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  line-height: $font-leading-basic
  text-align: center
  width: 100%

.top
  top: $margin-small
  position: absolute
  
.middle
  position: absolute
  height: 100%
  width: 100%
  display: table-cell
  vertical-align: middle

.bottom
  bottom: $margin-small
  position: absolute
  
.sans-medium
  font-size: 1em
  font-family: $sans
  
.sans-small
  font-size: .5em
  font-family: $sans
  
.serif-medium
  font-size: 1em
  font-family: $serif
  

// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background: $color-grey-medium;
  background: linear-gradient(to bottom,  $color-grey-dark 0%, $color-grey-light 100%);
  color: $color-black-soft
  width: 100%
  height: 100%
  //animation: background-colors 20s infinite 

#main-container
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  perspective: 2000px

img
  max-width: 100%
  height: auto


// HEADER

#header
  width: 100%
  position: fixed
  top: 0
  color: $color-white
  padding: $margin-small
  text-align: right
  

// FOOTER

#footer
  width: 100%
  position: fixed
  bottom: 0
  color: $color-white
  padding: $margin-small
  

// BOOK

#lookbook .shadow, #lookbook.shadow
  box-shadow: 10px 0 4px 10px #ff0

.turn-page
  background-color: $color-white
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  text-align: center

.p1
  background-size: 50%
  background-image: url('../img/lookbook/p1.jpg')
  
.p2
  background-image: url('../img/lookbook/p2.jpg')
  
.p4
  background-image: url('../img/lookbook/p3.jpg')
  



  

@keyframes background-colors
  0%
    background-color: $color-grey-medium
  16%
    background-color: $color-grey-light
  33%
    background-color: $color-grey-dark
  50%
    background-color: $color-grey-light
  66%
    background-color: $color-grey-medium
  83%
    background-color: $color-grey-dark
  100%
    background-color: $color-grey-medium


// MEDIA QUERIES

@media screen and (max-width: 700px)
  $font-size-basic = 12px
  $font-leading-basic = 1.35em
  
  body
    font-size: $font-size-basic
    line-height: $font-leading-basic
