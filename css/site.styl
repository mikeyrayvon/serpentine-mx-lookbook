@import "sanitize"
@import "helpers"
 
// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-tiny = ($gutter/2)
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white = rgb(255,255,255)

$color-grey-light = rgb(140,140,140)
$color-grey-dark = rgb(40,40,40)
$color-grey-medium = rgb(90,90,90)

// TYPOGRAPHY

body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-grey
  color: $color-black-soft
  width: 100%
  height: 100%
  animation: background-colors 20s infinite

#main-container
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  perspective: 2000px

img
  max-width: 100%
  height: auto


// HEADER

#header
  min-height: 20px
  background: black

// BOOK

.turn-page
  background-color: $color-white


// FOOTER

#footer
  min-height: 100px
  background: black
  width: 100%
  position: fixed
  bottom: 0
  

@keyframes background-colors
  0%
    background-color: $color-grey-medium
  16%
    background-color: $color-grey-light
  33%
    background-color: $color-grey-dark
  50%
    background-color: $color-grey-light
  66%
    background-color: $color-grey-medium
  83%
    background-color: $color-grey-dark
  100%
    background-color: $color-grey-medium


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
