@import "sanitize"
@import "helpers"
@import "fonts"
 
// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-tiny = ($gutter/2)
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 28px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black = rgb(0,0,0)
$color-white = rgb(255,255,255)

$color-grey-light = rgb(140,140,140)
$color-grey-dark = rgb(40,40,40)
$color-grey-medium = rgb(90,90,90)

$sans = 'apercu', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$serif = 'dutch', Times, 'Times New Roman', Georgia, serif;

// TYPOGRAPHY

body
  font-family:$sans
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  line-height: $font-leading-basic
  text-align: center
  width: 100%

.top
  top: $margin-small
  position: absolute
  
.middle
  position: absolute
  height: 100%
  width: 100%
  display: table-cell
  vertical-align: middle

.bottom
  bottom: $margin-small
  position: absolute
  
.sans-medium
  font-size: 1em
  font-family: $sans
  
.sans-small
  font-size: .5em
  font-family: $sans
  
.serif-medium
  font-size: 1em
  font-family: $serif
  

// LINKS

a,a:active,a:visited
  color:inherit
  &:hover
    border-bottom: 2px solid $color-white


// BASIC

html
  background: $color-grey-medium;
  background: linear-gradient(to bottom,  rgba(40,40,40,.9) 0%, rgba(140,140,140,.7) 100%), url('../img/bg.jpg');
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  color: $color-black
  width: 100%
  height: 100%

#main-container
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%

img
  max-width: 100%
  height: auto


// HEADER

#header
  width: 100%
  position: fixed
  top: 0
  color: $color-white
  padding: $margin-basic
  text-align: right
  

// FOOTER

#footer
  width: 100%
  position: fixed
  bottom: 0
  color: $color-white
  padding: $margin-basic $margin-basic $margin-small
  div
    position: absolute
  

// BOOK

.shadow
  box-shadow: 0px 0 $margin-basic $margin-small $color-grey-dark 

.page
  background-color: $color-white
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  text-align: center

.p1
  background-size: 50%
  background-image: url('../img/lookbook/p1.jpg')
  
.p2
  background-image: url('../img/lookbook/p2.jpg')
  
.p4
  background-image: url('../img/lookbook/p3.jpg')
  
.p5
  background-image: url('../img/lookbook/p5.jpg')
  
.p7
  background-image: url('../img/lookbook/p7.jpg')
  
.p8
  background-image: url('../img/lookbook/p8.jpg')
  background-size: 200% 100%
  background-position: left center
  
.p9
  background-image: url('../img/lookbook/p8.jpg')
  background-size: 200% 100%
  background-position: right center
  
.p11
  background-color: $color-black
  color: $color-white
  
.p13
  background-image: url('../img/lookbook/p13.jpg')
  
.p14
  background-image: url('../img/lookbook/p14.jpg')
  
.p17
  background-image: url('../img/lookbook/p17.jpg')
  
.p18
  background-image: url('../img/lookbook/p18.jpg')

.p19
  background-size: 50%
  background-image: url('../img/lookbook/p19.jpg')
  
.p20, .p21
  padding: $margin-basic
  
.bottom-left
  width: 50%
  display: block
  
.bottom-right
  width: 50%
  display: block
  float: right
  
  

  


@keyframes background-colors
  0%
    background-color: $color-grey-medium
  16%
    background-color: $color-grey-light
  33%
    background-color: $color-grey-dark
  50%
    background-color: $color-grey-light
  66%
    background-color: $color-grey-medium
  83%
    background-color: $color-grey-dark
  100%
    background-color: $color-grey-medium


// MEDIA QUERIES

@media screen and (max-width: 700px)
  $font-size-basic = 12px
  $font-leading-basic = 1.35em
  
  body
    font-size: $font-size-basic
    line-height: $font-leading-basic
