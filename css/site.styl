// MEDIA QUERIES

@media screen and (max-width: 800px), screen and (max-height: 800px)
  $font-size-basic = 21px
  $font-leading-basic = 1.35em
  
  body
    font-size: $font-size-basic
    line-height: $font-leading-basic

@media screen and (max-width: 700px), screen and (max-height: 700px)
  $font-size-basic = 16px
  $font-leading-basic = 1.35em
  
  body
    font-size: $font-size-basic
    line-height: $font-leading-basic
    
@media screen and (max-width: 500px), screen and (max-height: 500px)
  $gutter = 10px
  
  $margin-tiny = ($gutter/2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  
  $font-size-basic = 10px
  $font-leading-basic = 1.35em
  
  body
    font-size: $font-size-basic
    line-height: $font-leading-basic
    
  .top
    top: $margin-small

  .bottom
    bottom: $margin-small
  
  #header
    padding: $margin-small
    font-size: 1.4em
    
  #footer
    padding: $margin-small
    font-size: 1.4em
 
  .shadow
    box-shadow: 0px 0 $margin-basic $margin-small $color-grey-dark 
    
