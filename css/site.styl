@import "sanitize"
@import "helpers"
@import "fonts"
 
// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-tiny = ($gutter/2)
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 26px
$font-leading-basic = 1.5em
$font-tracking-basic = 0.001em

$color-black = rgb(0,0,0)
$color-black-transparent = rgba(0,0,0,.5)
$color-white = rgb(255,255,255)

$color-grey-light = rgb(140,140,140)
$color-grey-dark = rgb(40,40,40)
$color-grey-medium = rgb(90,90,90)

$color-purple = rgb(160,29,245) 

$sans = 'apercu', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$sans-medium = 'apercu-medium', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$serif = 'dutch', Times, 'Times New Roman', Georgia, serif;

// TYPOGRAPHY

body
  font-family:$sans
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  line-height: $font-leading-basic
  text-align: center
  width: 100%
  padding: 0 2%

.top
  top: $margin-small
  position: absolute
  width: 80%
  left: 10%
  
.middle
  position: absolute
  height: 100%
  width: 80%
  left: 10%
  display: table-cell
  vertical-align: middle

.bottom
  bottom: $margin-small
  position: absolute
  width: 80%
  left: 10%
  
.sans-medium
  font-size: 1em
  font-family: $sans
  
.sans-small
  font-size: .3em
  font-family: $sans
  
.serif-medium
  font-size: 1em
  font-family: $serif
  

// LINKS

a,a:active,a:visited
  color:inherit
  &:hover
    border-bottom: 2px solid $color-white
    
a.email-link,a.email-link:active,a.email-link:visited
  border-bottom: 2px solid $color-white


